---
import Footer from "../components/Footer.astro";
import Form1 from "../components/Form1.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/img/ikoner/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Kontakt</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=League+Gothic&display=swap"
      rel="stylesheet"
    />
    <meta
      name="keywords"
      content="kontakt, kontaktformular, kontakt os, spørgsmål, feedback"
    />
    <meta
      name="description"
      content="Kontakt os ved hjælp af vores kontaktformular. Har du spørgsmål eller feedback, er vi klar til at hjælpe dig."
    />
  </head>
  <body>
    <Header />
    <div class="parallax-container">
      <div class="filter">
        <img src="img/billeder/filter.png" alt="filter" />
      </div>
      <div class="gradient parallax-image">
        <img src="img/billeder/gradient1.png" alt="" />
      </div>
      <section class="container content">
        <div>
          <h1>Kontakt</h1>
          <Form1 />
        </div>
      </section>
    </div>
    <Footer />
  </body>
</html>

<style>
  /* .gradient {
    position: fixed;
    top: 100px;
    z-index: -998;
    width: 500px;
    left: 43%;
  } */
  .filter {
    position: fixed;
    height: 3000px;
    z-index: -999;
    opacity: 0.2;
    filter: grayscale(100%);
    object-fit: cover;
  }

  .filter img {
    max-width: screen;
    max-height: screen;
  }

  .parallax-container {
    position: relative;
    height: 1500px; /* Juster højden efter behov */
    overflow: hidden;
  }

  .parallax-image {
    position: absolute;
    top: 100px;
    left: 38%;
    z-index: -99999;
    max-width: 100%;
    /* background-image: url("img/billeder/gradient1.png"); */
    background-size: cover;
    transform: translateZ(1px) scale(0.5); /* Juster skaleringsfaktoren efter behov */
  }
  .parallax-image img {
    width: 450px;
  }

  .content {
    position: relative;
    z-index: 1;
  }

  @media (min-width: 800px) {
    .filter {
      position: fixed;
      height: 100%;
      z-index: -999;
      opacity: 0.2;
      filter: grayscale(100%);
    }
    .parallax-image {
      width: 1200px;
      max-width: 100%;
      z-index: -99999;
    }

    .parallax-image img {
      width: 1200px;
    }
  }
</style>
<script>
  window.addEventListener("scroll", function () {
    const parallax = document.querySelector(".parallax-image");
    let scrollPosition = window.pageYOffset;
    parallax.style.transform =
      "translateY(" +
      scrollPosition * 1.2 +
      "px)"; /* Juster hastigheden efter behov */
  });
</script>
