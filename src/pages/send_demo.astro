---
import Footer from "../components/Footer.astro";
import Form2 from "../components/Form2.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/img/ikoner/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Send demo</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=League+Gothic&display=swap"
      rel="stylesheet"
    />
    <meta
      name="keywords"
      content="send din demo, musikdemo, musikindsendelse, demo submission"
    />
    <meta
      name="description"
      content="Send din musikdemo til os ved hjælp af vores demo indsendelsesformular. Vi ser frem til at lytte til dit talent!"
    />
  </head>
  <body>
    <Header />
    <div
      class="parallax-container"
      role="region"
      aria-label="Parallax-container"
    >
      <div class="filter">
        <img src="img/billeder/Filter.webp" alt="filter" />
      </div>
      <div class="gradient parallax-image">
        <img src="img/billeder/gradient2.png" alt="gradient" />
      </div>

      <section class="container content">
        <div>
          <h1>Send din demo</h1>
          <Form2 />
        </div>
      </section>
    </div>
    <Footer />
  </body>
</html>

<style>
  /* .gradient {
    position: fixed;
    top: 100px;
    z-index: -998;
    width: 500px;
    left: 43%;
  } */
  .filter {
    position: fixed;
    height: 3000px;
    z-index: -999;
    opacity: 0.2;
    filter: grayscale(100%);
    object-fit: cover;
  }

  .filter img {
    max-width: screen;
    max-height: screen;
  }

  .parallax-container {
    position: relative;
    height: 1000px; /* Juster højden efter behov */
    overflow: hidden;
  }

  .parallax-image {
    position: absolute;
    top: 100px;
    left: 45%;
    z-index: -99999;
    max-width: 100%;
    /* background-image: url("img/billeder/gradient1.png"); */
    background-size: cover;
    transform: translateZ(1px); /* Juster skaleringsfaktoren efter behov */
  }
  .parallax-image img {
    width: 450px;
    -webkit-transform: scaleX(-1);
    transform: scaleX(-1);
  }

  .content {
    position: relative;
    z-index: 1;
  }

  @media (min-width: 800px) {
    /* .gradient {
      position: fixed;
      top: 100px;
      z-index: -998;
      width: 1200px;
    } */
    .filter {
      position: fixed;
      height: 100%;
      z-index: -999;
      opacity: 0.2;
      filter: grayscale(100%);
    }
    .parallax-image {
      width: 1200px;
      max-width: 100%;
      z-index: -99999;
    }

    .parallax-image img {
      width: 1400px;
    }
    .parallax-container {
      position: relative;
      height: 1200px; /* Juster højden efter behov */
      overflow: hidden;
    }
  }
</style>
<script>
  window.addEventListener("scroll", function () {
    const parallax = document.querySelector(".parallax-image");
    let scrollPosition = window.pageYOffset;
    parallax.style.transform =
      "translateY(" +
      scrollPosition * 0.8 +
      "px)"; /* Juster hastigheden efter behov */
  });
</script>
