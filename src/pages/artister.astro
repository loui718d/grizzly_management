---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Aksglæde</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=League+Gothic&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <h1 class="container">Artister</h1>
    <div class="grid1">
      <div class="h3_hojre">
        <h3>Ægte, råt, pop</h3>
      </div>
      <div class="h2_hojre"><h2>Jung</h2></div>
    </div>
    <div class="grid2">
      <a class="knap1 secondary_small" href="/jung.html">Se artist</a>
      <div class="billedehojre">
        <img src="/img/billeder/jung4.webp" alt="jung" />
      </div>
    </div>

    <Footer />
  </body>
</html>

<style>
  .grid1 {
    display: grid;
    grid-template-columns: 3fr 1fr;
    position: relative;
  }
  .h3_hojre {
    place-self: end end;
  }

  .h2_hojre {
    transform-origin: top right;
    right: 0;
    top: 0;
    transform: rotate(90deg) translateX(100%);
  }

  .billedehojre {
    grid-area: 1/1;
    place-self: end end;
  }
  .billedehojre img {
    border-radius: var(--radius-card-1-mob);
    min-height: 340px;
  }

  .grid2 {
    display: grid;
    margin-left: 30px;
  }
  .knap1 {
    grid-area: 1/1;
    z-index: 1;
    place-self: end end;
    margin-bottom: 10px;
    margin-right: 10px;
  }

  @media (min-width: 800px) {
    .billedehojre img {
      border-radius: var(--radius-card-1-desk);
      max-height: 530px;
    }
  }
</style>
