---
import "../styles/global.css";
---

<form class="contact-form">
  <div class="form-group">
    <label for="email">Din email:</label>
    <input
      type="email"
      id="email"
      name="email"
      placeholder="Indtast din email"
      required
    />
  </div>
  <div class="form-group">
    <label for="phone">Telefon:</label>
    <input
      type="tel"
      id="phone"
      name="phone"
      placeholder="Indtast dit telefonnummer"
    />
  </div>
  <div class="form-group">
    <label for="subject">Emne:</label>
    <input
      type="text"
      id="subject"
      name="subject"
      placeholder="Indtast emnet"
      required
    />
  </div>
  <div class="form-group">
    <label for="message">Besked:</label>
    <textarea
      id="message"
      name="message"
      rows="5"
      placeholder="Indtast din besked"
      required></textarea>
  </div>
  <button class="secondary_large a" type="submit">Send</button>
</form>

<style>
  .contact-form {
    max-width: 500px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  label {
    display: block;
    margin-bottom: 5px;
    color: var(--color-hvid);
    font-family: var(--font-family-helvetica);
    font-size: var(--font-size-body-desktop);

    line-height: 21.8px;
    font-weight: var(--font-weight-light);
  }

  input[type="email"],
  input[type="tel"],
  input[type="text"],
  textarea {
    width: 100%;
    color: white;
    padding: 10px;
    border: 1px solid var(--color-hvid);
    border-radius: 8px;
    background-color: transparent;
  }

  input::placeholder,
  textarea::placeholder {
    color: var(--color-sort-40); /* ændrer farven på placeholder-teksten */
    font-style: italic; /* ændrer skriftstilen på placeholder-teksten */
    /* tilføj eventuelle yderligere stilregler her */
    font-family: var(--font-family-helvetica);
    font-size: var(--font-size-body-desktop);

    line-height: 21.8px;
    font-weight: var(--font-weight-light);
  }
</style>
